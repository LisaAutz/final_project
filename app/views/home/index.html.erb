<h1>Welcome to Lisa Autz's Website</h1>

<%= link_to 'Articles', controller: 'articles' %>
<%= link_to 'New Article', new_article_path %>


<h1>Articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @article.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>